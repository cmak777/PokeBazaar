<h1>PokéBazzar</h1>
<div>
  <a class="btn btn-primary" href="/"> View My Profile(This actually goes to main page) </a>
</div>
<form method="POST" style="max-width: 300px; display: inline; margin: auto; margin-top: 50px; padding: 30px 30px 30px 30px">
  <div class="form-group">
    <input type="text" placeholder="Search for (Pokémon)..." class="form-control">
  </div>
  <div class="form-group">
    <input type="text" placeholder="Search for (CP)..." class="form-control">
  </div>
  <div class="form-group">
    <input type="text" placeholder="Search for (Location)..." class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-primary">Submit</button>
  </div>
</form>
{{#if prev}}
<a href="?page={{prev}}" class="btn btn-default">Previous Page</a>
{{/if}}
{{#if hasNext}}
<a href="?page={{next}}" class="btn btn-default">Next Page</a>
{{/if}}
<table class="table table-striped table-bordered">
  <tr>
    <th>
      Title
    </th>
  </tr>
{{#each books}}
  <tr>
    <td>
      {{title}}
    </td>
  </td>
{{/each}}
</table>
