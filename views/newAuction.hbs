{{#if error}}
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    {{message}}
  </div>
{{/if}}
<h1> show me something</h1>
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
<h3>Please enter the information</h3>
  <div class="form-group">
    <label>Pokemon to trade</label>
    <input type="text" name="sell" class="form-control">
  </div>
  <div class="form-group">
    <label>Pokemon looking for</label>
    <input type="text" name="buy" class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-primary">Post</button>
  </div>
</form>
